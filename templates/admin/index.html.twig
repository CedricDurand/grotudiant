{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<section>
  <center><h2><i>GÃ©rez vos articles !</i></h2></center>
  {% if articles %}
  <table class="highlight centered responsive-table s12 m4 l10">
    <thead>
      <tr>
        <th>ID</th>
        <th>Titre</th>
        <th>Date de publication</th>
        <th>Lien</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for article in articles %}
      <tr>
          <td>{{ article.id }}</td>
          <td>{{ article.titre }}</td>
          <td>{{ article.published|date('Y-m-d') }}</td>
          <td><a href="/post/{{ article.id }}">{{ article.getUrlAlias()}}</a></td>
          <td><a class="waves-effect waves-light btn-small"><i class="material-icons left">edit</i>Modifier (TODO)</a> <a class="waves-effect waves-light btn-small" href="{{ path('suppression', {id: article.id}) }}">Supprimer<i class="material-icons right">delete_forever</i></a></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  {% else %}
  <p>Vous avez aucun article en ligne !</p>
  {% endif %}
</section>
{% endblock %}
