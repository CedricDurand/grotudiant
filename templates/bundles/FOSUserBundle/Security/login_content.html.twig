  {% trans_default_domain 'FOSUserBundle' %}
  <center>{% block pageTitle %}<h4>Connection admin : {% endblock %}</h4></center>
  <div class="container">
    <div class="row">
      <div class="col s2"></div>
      <div class="col s8">
      {% if error %}
        <div class="red accent-4" style="text-align : center;">Erreur de connection !</div>
      {% endif %}

      <form action="{{ path("fos_user_security_check") }}" method="post">
          {% if csrf_token %}
              <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
          {% endif %}

          <label for="username">Identifiant</label>
          <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

          <label for="password">Mot de passe</label>
          <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />

          <center><input class="waves-effect waves-light light-blue btn" type="submit" id="_submit" name="_submit" value="Connexion" /></center>
      </form>
      </div>
    </div>
  </div>
